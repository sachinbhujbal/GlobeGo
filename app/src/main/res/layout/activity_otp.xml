<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.OtpActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:text="Enter 4 digit code"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="24dp"
                    android:ems="18"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:maxLines="3"
                    android:text="A four-digit code should have come to your email address that you indicated."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView38"
                    app:layout_constraintTop_toBottomOf="@+id/textView38" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/textView39"
                    app:layout_constraintTop_toBottomOf="@+id/textView39">

                    <!-- First OTP EditText -->
                    <EditText
                        android:id="@+id/otp_1"
                        android:layout_width="46dp"
                        android:layout_height="77dp"
                        android:background="@drawable/gray_otp_bg"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAccessibility="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp" />

                    <!-- Second OTP EditText -->
                    <EditText
                        android:id="@+id/otp_2"
                        android:layout_width="46dp"
                        android:layout_height="77dp"
                        android:layout_marginStart="37dp"
                        android:background="@drawable/gray_otp_bg"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAccessibility="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp" />

                    <!-- Third OTP EditText -->
                    <EditText
                        android:id="@+id/otp3"
                        android:layout_width="46dp"
                        android:layout_height="77dp"
                        android:layout_marginStart="37dp"
                        android:background="@drawable/gray_otp_bg"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAccessibility="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp" />

                    <!-- Fourth OTP EditText -->
                    <EditText
                        android:id="@+id/otp_4"
                        android:layout_width="46dp"
                        android:layout_height="77dp"
                        android:layout_marginStart="37dp"
                        android:background="@drawable/gray_otp_bg"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:importantForAccessibility="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirmBtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="139dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/blue_btn_radius"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelBtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="139dp"
                    android:layout_height="48dp"
                    android:background="@drawable/cancel_btn_bg"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Cancel"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/confirmBtn"
                    app:layout_constraintStart_toEndOf="@+id/confirmBtn"
                    app:layout_constraintTop_toTopOf="@+id/confirmBtn" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>